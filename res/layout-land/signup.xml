<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/first_name"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText android:id="@+id/first_name"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:clickable="true"
              android:singleLine="true"
              android:layout_alignParentRight="true"
              android:layout_toRightOf="@+id/textView"
              android:layout_alignBottom="@+id/textView"
              android:hint="Nom usuari"/>

    <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/email_address"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView"
            android:id="@+id/textView1"
            android:gravity="bottom"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText android:id="@+id/email_address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:singleLine="true"
              android:layout_alignParentLeft="false"
              android:layout_toRightOf="@+id/textView1"
              android:layout_alignParentRight="true"
              android:layout_alignBottom="@+id/textView1"
              android:hint="Correu electrÃ²nic"/>

    <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/password"
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_below="@+id/email_address"
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText android:id="@+id/pw"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:singleLine="true"
              android:password="true"
              android:layout_toRightOf="@+id/textView2"
              android:layout_alignParentRight="true"
              android:layout_alignBottom="@+id/textView2"
              android:hint="Contrassenya"/>

    <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/password_confirm"
            android:textStyle="bold"
            android:layout_below="@+id/pw"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:id="@+id/textView3"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText android:id="@+id/pw_confirm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:singleLine="true"
              android:password="true"
              android:layout_toRightOf="@+id/textView3"
              android:layout_alignParentRight="true"
              android:layout_alignBottom="@+id/textView3"
              android:hint="Confirmar contrassenya"/>

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ok2_button"
            android:longClickable="true"
            android:layout_below="@+id/pw_confirm"
            android:layout_marginTop="15dp"
            android:minWidth="90dp"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"/>

    <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_toRightOf="@+id/button"
            android:layout_alignTop="@+id/button"
            android:minWidth="90dp"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"/>


</RelativeLayout>