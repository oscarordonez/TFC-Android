<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_user"
            android:id="@id/textView_user"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:gravity="center_vertical|bottom"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView_user"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/textView_user"
            android:id="@id/txt_user"/>

    <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_pass"
            android:id="@id/textView_pass"
            android:layout_below="@id/textView_user"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/txt_pass"
            android:layout_alignTop="@id/textView_pass"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/textView_pass"
            android:inputType="textPassword"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ok_button"
            android:id="@id/btnOk"
            android:layout_below="@id/txt_pass"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel_button"
            android:id="@id/btnCancel"
            android:layout_alignTop="@id/btnOk"
            android:layout_toRightOf="@id/btnOk"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SignUp_button"
            android:id="@id/btnNewUser"
            android:layout_alignTop="@id/btnCancel"
            android:layout_alignRight="@id/txt_pass"/>
</RelativeLayout>